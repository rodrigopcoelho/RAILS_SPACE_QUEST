<div class="d-flex flex-column justify-content-center align-items-center bg-login text-center text-white">
  <h1 class="mb-5">SIGN IN</S></h1>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :username,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "username" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class:"btn btn-danger btn-lg text-white " %>
  </div>
<% end %>


